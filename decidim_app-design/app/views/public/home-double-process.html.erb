<% @activesection = "home" %>

<%= partial "template_top" %>

<main>
  <section class="wrapper-home extended hero-custom">
    <div class="hero-custom__container">
      <div class="row hero-custom__main">
        <div class="columns mediumlarge-8 large-7 large-push-1">
          <h1 class="heading1 hero-custom__heading">
            Primers Pressupostos Participatius de Barcelona
          </h1>
          <p class="heading5">
            Il·lustríssims Veïns i Veïnes, ja podeu presentar les vostres propostes de
            projectes del vostre districte.
          </p>
          <a class="hero-custom__cta button large button--sc" href="#">Participa!</a>
        </div>
        <div class="columns hero-custom__image mediumlarge-4 large-4" style="background-image:url(<%= image_path "silla.png" %>)">
        </div>
      </div>
      <div class="row">
        <h3 class="section-heading">Fases del Procés</h3>

      </div>
    </div>
  </section>

  <section class="wrapper-home">
    <div class="row">
      <h3 class="section-heading">Fases del Procés</h3>
      <div class="row collapse">
        <article class="card card--process card--mini">
          <a class="card__link" href="/public/info">
            <div class="card__image-top" style="background-image:url(<%= image_path "superilles.jpg" %>)"></div>
          </a>
          <div class="card__content">
            <a class="card__link" href="#">
              <h4 class="card__title">Superilles</h4>
            </a>
            <span class="card--process__small">Fase activa:
              <strong>Diagnóstico</strong>
            </span>
          </div>
        </article>
        <article class="card card--process card--mini">
          <%= link_to page_path("info"), class: "card__link" do %>
            <div class="card__image-top"
              style="background-image:url(<%= image_path "puntverd.jpg" %>)"></div>
          <% end %>
          <div class="card__content">
            <%= link_to page_path("info"), class: "card__link" do %>
              <h4 class="card__title">Reciclatge de dispositius electrònics</h4>
            <% end %>
            <span class="card--process__small">Fase activa:
              <strong>Diagnóstico</strong>
            </span>
          </div>
        </article>
      </div>
    </div>

  </section>

  <section class="wrapper-home wrapper-home--mini">
    <div class="row">
      <h3 class="section-heading">Pròximes trobades</h3>
      <%= partial "last_events" %>
    </div>
  </section>
  <section class="wrapper-home">
    <div class="row column">
      <h3 class="section-heading">Última activitat</h3>
    </div>
    <div class="row">
      <div class="column medium-6">
        <%= partial "last_activity" %>
      </div>
      <div class="column medium-6">
        <%= partial "last_activity" %>
      </div>
    </div>
  </section>
</main>

<%= partial "template_bottom" %>
