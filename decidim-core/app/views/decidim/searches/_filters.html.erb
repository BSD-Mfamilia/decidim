<%= filter_form_for filter do |form| %>
  <div class="filters-controls">
    <div class="filters__section">
      <div class="filters__search">
        <div class="input-group">
          <%= form.search_field :term, label: false, class: "input-group-field", placeholder: t(".search") %>
          <div class="input-group-button">
            <button type="submit" class="button button--muted">
              <%= icon "magnifying-glass", aria_label: t(".search") %>
            </button>
          </div>
        </div>
      </div>
    </div>

    <div class="filters__section">
      <fieldset>
        <legend>
          <h6 class="heading6">
            <%= t("components", scope: "decidim.search.filter") %>
          </h6>
        </legend>

        <input type="hidden" name="filter[component]" value="">

        <%= form.collection_radio_buttons :resource_type, searchable_resources_as_options(t("all", scope: "decidim.search.filter")), :first, :last, legend_title: t(".search") %>
      </fieldset>
    </div>
  </div>
<% end %>
